<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>


  <servlet>
    <servlet-name>BudgetListServlet</servlet-name>
    <servlet-class>com.ironyard.servlet.ListBudgetServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>BudgetListServlet</servlet-name>
    <url-pattern>/list</url-pattern>
  </servlet-mapping>

    <servlet>
        <servlet-name>BudgetTotalServlet</servlet-name>
        <servlet-class>com.ironyard.servlet.TotalBudgetServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>BudgetTotalServlet</servlet-name>
        <url-pattern>/total</url-pattern>
    </servlet-mapping>

  <servlet>
    <servlet-name>SearchByCat</servlet-name>
    <servlet-class>com.ironyard.servlet.SearchBudgetServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  <servlet-name>SearchByCat</servlet-name>
  <url-pattern>/filter</url-pattern>
  </servlet-mapping>

    <servlet>
        <servlet-name>CreateBudget</servlet-name>
        <servlet-class>com.ironyard.servlet.CreateBudgetServlet </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateBudget</servlet-name>
        <url-pattern>/create</url-pattern>
    </servlet-mapping>

    <servlet>
    <servlet-name>SelectBudget</servlet-name>
    <servlet-class>com.ironyard.servlet.SelectBudgetServlet</servlet-class>
</servlet>
    <servlet-mapping>
        <servlet-name>SelectBudget</servlet-name>
        <url-pattern>/select</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>UpdateBudget</servlet-name>
        <servlet-class>com.ironyard.servlet.UpdateBudgetServlet </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateBudget</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DeleteBudget</servlet-name>
        <servlet-class>com.ironyard.servlet.DeleteBudgetServlet  </servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteBudget</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>



</web-app>
